<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_exercises"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.ui.main.PlaceholderFragment"
    android:background="@drawable/main_background">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/white"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2">

                <Button
                    android:id="@+id/_1"
                    android:text="@string/exercise_1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/btn_main_back"
                    android:layout_margin="5dp"/>
                <Button
                    android:id="@+id/_2"
                    android:text="@string/exercise_2"
                    android:layout_columnWeight="1"
                    android:background="@drawable/btn_main_back"
                    android:layout_margin="5dp" />
                <Button
                    android:id="@+id/_3"
                    android:text="@string/exercise_3"
                    android:layout_columnWeight="1"
                    android:background="@drawable/btn_main_back"
                    android:layout_margin="5dp" />
                <Button
                    android:id="@+id/_4"
                    android:text="@string/exercise_4"
                    android:layout_columnWeight="1"
                    android:background="@drawable/btn_main_back"
                    android:layout_margin="5dp" />
                <Button
                    android:id="@+id/_5"
                    android:text="@string/exercise_5"
                    android:layout_columnWeight="1"
                    android:background="@drawable/btn_main_back"
                    android:layout_margin="5dp" />
                <Button
                    android:id="@+id/_6"
                    android:text="@string/exercise_6"
                    android:layout_columnWeight="1"
                    android:background="@drawable/btn_main_back"
                    android:layout_margin="5dp" />
                <Button
                    android:id="@+id/_7"
                    android:text="@string/exercise_7"
                    android:layout_columnWeight="1"
                    android:background="@drawable/btn_main_back"
                    android:layout_margin="5dp" />
                <Button
                    android:id="@+id/_8"
                    android:text="@string/exercise_8"
                    android:layout_columnWeight="1"
                    android:background="@drawable/btn_main_back"
                    android:layout_margin="5dp" />

            </GridLayout>





        </LinearLayout>
    </ScrollView>



</LinearLayout>